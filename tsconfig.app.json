{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "target": "esnext",
    "lib": [ "esnext", "DOM" ],
    "module": "esnext",
    "noImplicitAny": false,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
